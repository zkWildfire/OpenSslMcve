{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 23,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"toolchainFile": "${sourceDir}/_vcpkg/scripts/buildsystems/vcpkg.cmake"
		},
		{
			"name": "debug",
			"displayName": "Debug",
			"description": "Builds the MCVE in Debug mode",
			"inherits": [
				"base"
			],
			"binaryDir": "${sourceDir}/_build/debug",
			"installDir": "${sourceDir}/_out/debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "string",
					"value": "Debug"
				}
			}
		},
		{
			"name": "release",
			"displayName": "Release",
			"description": "Builds the MCVE in Release mode",
			"inherits": [
				"base"
			],
			"binaryDir": "${sourceDir}/_build/release",
			"installDir": "${sourceDir}/_out/release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "string",
					"value": "Release"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "debug",
			"configurePreset": "debug"
		},
		{
			"name": "release",
			"configurePreset": "release"
		}
	]
}
